<Application x:Class="spitfire_solutions.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:spitfire_solutions"
             xmlns:ss="clr-namespace:spitfire_solutions.ViewModels"
             StartupUri="MainWindow.xaml">
                
    <Application.Resources>
        
        <!--REMEMBER TO REBUILD / COMPILE SOLUTION AFTER ADDING IN HERE!!!-->
        
        <!--Can only use one dictionary resc at once, merge them-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Color list-->
                <ResourceDictionary Source="/Styles/UserInterfaceColorsResourceDictionary.xaml" />
                <!--Button list-->
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        
    </Application.Resources>
</Application>
